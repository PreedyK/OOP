import tkinter as tk
from turtledemo.sorting_animate import show_text

top = tk.Tk()
top.geometry("700x700")

q_entry = tk.Text(top, width=35, height=2)
q_entry.place(x=100, y=100)

s_entry = tk.Text(top, width=35, height=2)
s_entry.place(x=100, y=250)

q_display = tk.Text(top, width=35, height=2)
q_display.place(x=100, y=400)

s_display = tk.Text(top, width=35, height=6)
s_display.place(x=100, y=500)

class Queue:
    def __init__(self):
        self.element = []

    def enqueue(self):
        x = q_entry.get(1.0, "end-1c").strip()
        if x:
            self.element.append(x)
            q_entry.delete(1.0, "end")
        else:
            print("Please Enter a Value First.")

    def dequeue(self):
        if self.element:
            removed = self.element.pop(0)
        else:
            print("Queue is Empty. ")

    def display_queue(self):
        q_display.delete("1.0", "end")
        q_display.insert(tk.INSERT, "Queue: ")
        print("Elements in Queue:")
        for i in self.element:
            print(i)
            q_display.insert(tk.INSERT, i+";")


class Stack:
    def __init__(self):
        self.element = []

    def push(self):
        value = s_entry.get("1.0", "end-1c").strip()
        if value:
            self.element.append(value)
            s_entry.delete("1.0", "end")
        else:
            print("Please Enter a Value First.")

    def pop(self):
        if self.element:
            removed = self.element.pop()
        else:
            print("Stack is Empty.")

    def display_stack(self):
        s_display.delete("1.0", "end")
        s_display.insert(tk.INSERT, "Stack:\n")

        for item in reversed(self.element):
            if isinstance(item, list):  # â˜… NEW detects queue
                s_display.insert(tk.INSERT, f"[Queue: {item}]\n")
            else:
                s_display.insert(tk.INSERT, f"{item}\n")

    def push_queue(self, queue_obj):
        self.element.append(queue_obj.element.copy())



#Main Code
q1 = Queue()
s1 = Stack()

B1 = tk.Button(top, text="Enqueue", width=10, height=2, command=q1.enqueue)
B1.place(x=100, y=150)

B2 = tk.Button(top, text="Dequeue", width=10, height=2, command=q1.dequeue)
B2.place(x=200, y=150)

B3 = tk.Button(top, text="Display Queue", width=10, height=2, command=q1.display_queue)
B3.place(x=300, y=150)

B4 = tk.Button(top, text="Push", width=10, height=2, command=s1.push)
B4.place(x=100, y=300)

B5 = tk.Button(top, text="Pop", width=10, height=2, command=s1.pop)
B5.place(x=200, y=300)

B6 = tk.Button(top, text="Display Stack", width=10, height=2, command=s1.display_stack)
B6.place(x=300, y=300)

B7 = tk.Button(top, text="Push Queue", width=12, height=2, command=lambda: s1.push_queue(q1))
B7.place(x=420, y=300)


top.mainloop()
